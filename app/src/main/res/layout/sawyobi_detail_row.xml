<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_sawyobi_list_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t_tarigi_sawylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/colorForText" />

            <TextView
                android:id="@+id/t_distrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/colorCardview"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="20"
            android:layout_width="0dp"
            android:background="@color/color_orderCol"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/t_ludi_sawylist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorForText" />
        </LinearLayout>

        <TextView
            android:id="@+id/t_k30in_sawylist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:textAlignment="center"
            android:textColor="@color/colorForText" />

        <TextView
            android:id="@+id/t_k50in_sawylist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@color/color_orderCol"
            android:textAlignment="center"
            android:textColor="@color/colorForText" />

        <TextView
            android:id="@+id/t_k30out_sawylist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:textAlignment="center"
            android:textColor="@color/colorForText" />

        <TextView
            android:id="@+id/t_k50out_sawylist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@color/color_orderCol"
            android:textAlignment="center"
            android:textColor="@color/colorForText" />

    </LinearLayout>

    <TextView
        android:id="@+id/t_sawylist_row_comment"
        android:textColor="@color/colorForText"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
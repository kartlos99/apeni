<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_xarjebi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dfsdfd"
            android:textSize="@dimen/textsize_3" />

    </ScrollView>

    <TextView
        android:id="@+id/t_xarj_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xarjebi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scroll_xarjebi" />

    <EditText
        android:id="@+id/e_xarj_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/t_xarj_amount"
        app:layout_constraintTop_toBottomOf="@id/scroll_xarjebi"
        android:hint="@string/lari"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/t_xarj_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/e_xarj_amount" />

    <EditText
        android:id="@+id/e_xarj_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/t_xarj_comment"
        app:layout_constraintTop_toBottomOf="@id/e_xarj_amount"
        android:hint="@string/comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>